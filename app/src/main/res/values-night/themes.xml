<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="background">@color/black_overlay</item>
        <item name="colorSurface">@color/dark_gray</item>
        <item name="colorOnSurface">@color/light_gray</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/dark_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>
        <item name="selectableItemBackground">@drawable/pre_lollipop_selectable_item</item>
        <item name="colorControlNormal">@color/text_black</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/black_overlay</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/event_title_text_size</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <!-- Toolbar Title Color -->
        <item name="android:textColorPrimary">@color/text_black</item>
        <!-- Toolbar Up Button Color -->
        <item name="android:textColorSecondary">@color/text_black</item>
        <item name="expandedTitleTextColor">@color/text_black</item>
        <item name="collapsedTitleTextColor">@color/text_black</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="toolbarStyle">@style/ToolbarStyle</item> <!--Toolbar 스타일-->
        <item name="actionMenuTextColor">@color/dark_gray</item> <!--액션 메뉴의 텍스트 색상-->
        <item name="colorControlNormal">@color/dark_gray</item> <!--홈/뒤로가기 버튼의 색상-->
    </style>

    <!--Toolbar 스타일-->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item> <!-- Toolbar의 배경색-->
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item> <!-- Toolbar의 타이틀 텍스트-->
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleStyle
        </item> <!-- Toolbar의 서브타이틀 텍스트-->
    </style>

    <!-- Toolbar의 타이틀 텍스트-->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/dark_gray</item> <!-- Toolbar의 타이틀 텍스트 색상-->
        <item name="android:textSize">16sp</item> <!-- Toolbar의 타이틀 텍스트 사이즈-->
    </style>

    <!-- Toolbar의 서브타이틀 텍스트-->
    <style name="ToolbarSubtitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/dark_gray</item> <!-- Toolbar의 서브타이틀 텍스트 색상-->
        <item name="android:textSize">12sp</item> <!-- Toolbar의 서브타이틀 텍스트 사이즈-->
    </style>

</resources>